{
    "include": [
        "src/**/*"
    ],
    "ts-node": {
      "files": true
    },
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist",
        "target": "es2018",
        "lib": ["es2018", "DOM"],
        "esModuleInterop": true,
        "module": "commonjs",
        "strictNullChecks": true,
        "types": ["codeceptjs", "webdriverio/async"],
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    }
}